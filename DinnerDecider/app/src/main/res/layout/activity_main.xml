<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/selectedFoodText" app:fontFamily="@font/muli_bold" android:textSize="30sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.5"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/dd_logo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView" android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:layout_width="414dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/decideBtn"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimary"
            android:textSize="18sp" android:text="Decide" app:fontFamily="@font/muli_bold"
            android:textColor="@android:color/background_light"
            android:layout_marginEnd="2dp" android:layout_marginRight="2dp"/>

    <Button
            android:text="Add food"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/addFoodBtn" style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@android:color/background_light" android:background="@color/colorPrimary"
            app:layout_constraintHorizontal_bias="0.494" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/decideBtn"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addFoodTxt"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="23dp"
            app:layout_constraintBottom_toTopOf="@+id/addFoodBtn" android:hint="add food..."/>

</android.support.constraint.ConstraintLayout>